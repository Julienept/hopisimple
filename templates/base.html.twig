<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <script src="https://kit.fontawesome.com/fb9954dc69.js"></script>

        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <i class="fas fa-tint"></i>
             <a class="navbar-brand" href="{{ path('homepage')}}">hopisimple</a>
             <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                 <ul class="navbar-nav ml-auto">
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="text" placeholder="Rechercher">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
                    </form>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('homepage')}}">Proposer un service</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Les services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Inscription</a>
                    </li>
                    <li class="navbar-item">
                        <a class="nav-link" href="#">Connexion</a>
                    </li>
                </ul>
                
             </div>
        </nav>
        {% block body %}{% endblock %}

        <script scr="/js/jquery.min.js"></script>
        <script scr="/js/popper.min.js"></script>
        <script scr="/js/bootstrap.min.js"></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
