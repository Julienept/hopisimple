{% extends 'base.html.twig' %}

{% block title %}Connexion à l'administration{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-header">
                    <h4 class="card-title">
                        <i class="fas fa-lock"></i>
                        Connexion à l'administration
                    </h4>
                </div>
                <div class="card-body">
                    {% if hasError %}
                        <div class="alert alert-warning">
                            <p>Vos identifiants ne sont pas corrects.</p>
                        </div>
                    {% endif %}
                    <form method="post">
                        <div class="form-group"><label for="_username">Email</label><input type="text" class="form-control"  name="_username" value="{{ username }}"></div>
                        <div class="form-group"><label for="_password">Mot de passe</label><input type="password" class="form-control"  name="_password"></div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-lock-open"></i>
                                Connexion
                            </button>
                            <a href="{{ path('homepage') }}" class="btn btn-link">
                                <i class="fas fa-arrow-circle-left"></i>
                                Retour au site
                            </a>
                        </div>
                    </form>
                </div>
            </div>
    </div>
</div>
{% endblock %}
