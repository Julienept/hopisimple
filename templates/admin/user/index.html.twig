{% extends 'base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Administration des utilisateurs</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date d'inscription</th>
                    <th>Nom</th>
                    <th>Titre</th>
                    <th>Action</th>

                    </tr>
            </thead>

            <tbody>
                {% for user in pagination.data %}
                <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.inscriptionDate|date('d/m/Y H:i')}}</td>
                    <td><img src="{{user.picture}}" alt="" class="avatar avatar-micro"> {{user.firstName}}</td>
                    <td>{{user.title}}</td>
                    <td>
                        <a href="{{ path('admin_users_edit', {'id': user.id})}}" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a href="{{ path('admin_users_delete', {'id': user.id}) }}" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        
        </table>
            {{ pagination.display() }}

    </div>
{% endblock %}