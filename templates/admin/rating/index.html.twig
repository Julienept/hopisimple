{% extends 'base.html.twig' %}

{% block title %}Administration des notations{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administration des notations</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Auteur</th>
                    <th>Note</th>
                    <th>Commentaire</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                {% for rating in ratings %}
                <tr>
                    <td>{{rating.id}}</td>
                    <td>{{rating.createdAt|date('d/m/Y H:i')}}</td>
                    <td><img src="{{rating.author.picture}}" alt="" class="avatar avatar-micro"> {{rating.author.firstName}}</td>
                    <td>{{rating.notation}}</td>
                    <td>{{rating.comment}}</td>

                    <td>
                        <a href="{{ path('admin_rating_edit', {'id': rating.id})}}" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a href="{{ path('admin_rating_delete', {'id': rating.id}) }}" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        
        </table>
        
    </div>
{% endblock %}